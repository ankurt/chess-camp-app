  <div class="small-6 columns">

	  <div class="form-inputs">
	    <%= f.input :name %>

	  	<%= f.input :street_1 %>

	  	<%= f.input :street_2 %>

	  	<%= f.input :city %>

	  	<%= f.label :state %>
