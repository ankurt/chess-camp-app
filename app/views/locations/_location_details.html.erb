<h3>Location Details</h3><br />
<strong>Name:&nbsp;&nbsp;</strong> 
  <%= @location.name %><br /><br />

<strong>Street 1:&nbsp;&nbsp;</strong> 
  <%= @location.street_1 %><br /><br />

<% if !@location.street_2.nil? %>
<strong>Street 2:</strong>
	<%= @location.street_2 %>
	<br/><br/>
<% end %>


<strong>City:&nbsp;&nbsp;</strong> 
  <%= "#{@location.city}, #{@location.state} #{@location.zip}" %><br /><br />

<strong>Maximum Capacity:</strong>
<%= @location.max_capacity %>

</br></br>

<%= link_to "Edit Location", edit_location_path(@location), class: "button tiny radius" %>&nbsp;&nbsp;
<%= link_to 'Destroy Location', location_path(@location), data: { confirm: 'Are you sure you want to permanently remove this location from the system?' }, method: :delete, class: "button tiny radius alert" %>