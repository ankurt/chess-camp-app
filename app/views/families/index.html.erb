<div class="row">
  <div class="small-7 columns">
    <h1>Listing families</h1>

    <table>
      <tbody>
        <tr>
          <th>Family Name</th>
          <th>Parent</th>
          <th>Phone</th>
          <th>Active?</th>
        </tr>
        <% @families.each do |family| %>
          <tr>
            <td><%= link_to family.family_name, family %></td>
            <td><%= family.parent_first_name %></td>
            <td><%= number_to_phone(family.phone) %></td>
            <td><%= family.active == true ? "Yes" : "No" %></td>
            <td><%= link_to 'Edit', edit_family_path(family), :class => 'button tiny radius' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>
    <span class="paginate">
    <%= will_paginate @families, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>
    </span>
    <%= link_to 'New Family', new_family_path %>
  </div>
  <div class="small-1 columns">
  </div>
  <div class="small-4 columns">
    <%= render :partial => "inactive_families" %>
  </div>
</div>