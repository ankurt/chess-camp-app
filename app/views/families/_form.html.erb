<%= simple_form_for(@family) do |f| %>
  <%= f.error_notification %>
  <div class="row">
  <div class="small-6 columns">

	  <div class="form-inputs">
	    <%= f.input :family_name %>

	  	<%= f.input :parent_first_name %>

	  	<%= f.input :phone %>

	  	<%= f.input :email %>

	  	<%= f.input :active %>

	  </div>
  </div>
  <div class="small-6 columns">
  	&nbsp;
  </div>
  </div>

	    <div class="form-actions">
	      <%= f.submit nil, class: 'button radius' %>
	      <%= link_to 'Back to list of Families', families_path, :class => 'button secondary radius' %>
	    </div>
	<% end %>
